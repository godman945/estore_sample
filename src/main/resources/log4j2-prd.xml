<?xml version="1.0" encoding="UTF-8"?>
<configuration status="OFF">
    <appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="[%d{yyyy-MM-dd HH:mm:ss}] [%-5level] [%class{36}]%M(%L) %msg%xEx%n"/>
        </Console>
        
        
        <RollingRandomAccessFile name="Appender" immediateFlush="true" fileName="/home/estoread/logs/estoreApi/estoreApi.log"
			filePattern="/home/estoread/logs/estoreApi/estoreApi.%d{yyyy-MM-dd}.log.gz">
			<PatternLayout>
				<pattern>[%d{yyyy-MM-dd HH:mm:ss}] [%-5level] [%class{36}]%M(%L) %msg%xEx%n</pattern>
			</PatternLayout>
			<Policies>
				<TimeBasedTriggeringPolicy modulate="true" interval="1"/>
			</Policies>
		</RollingRandomAccessFile>
    </appenders>
    
    <loggers>
        <root level="info" >
            <AppenderRef ref="Appender" />  
        	<appender-ref ref="Console" />
        	
        	
        </root>
    </loggers>
</configuration>